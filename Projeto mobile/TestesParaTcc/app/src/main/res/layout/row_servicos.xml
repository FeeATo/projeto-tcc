<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iconSituacaoListModel"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/nomeListModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="70dp"
        android:text="Miguel Alota"
        android:textColor="#454545"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/statusListModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentRight="true"
        android:text="Em andamento"
        android:textColor="#555555"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/idServicoListModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentRight="true"
        android:text="1"
        android:textColor="#fff"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/enderecoListModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="70dp"
        android:text="Rua ruaruarua, 170"
        android:textSize="16sp"
        android:textColor="#ababab"/>

    <TextView
        android:id="@+id/complementoListMovel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="70dp"
        android:text="Complemento pipa"
        android:textSize="13sp"
        android:textColor="#ababab"/>
</RelativeLayout>