<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/btnPerfilProfile"
                android:layout_width="390dp"
                android:layout_height="65dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/botao_meuperfil"
                android:drawableLeft="@drawable/ic_account"
                android:textColor="#4A4A4A"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:text="Perfil"
                android:textAlignment="viewStart"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btnPlanosProfile"
                android:layout_width="390dp"
                android:layout_height="65dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/botao_meuperfil"
                android:textColor="#4A4A4A"
                android:drawableLeft="@drawable/ic_monetization"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:text="Planos "
                android:textAlignment="viewStart"
                android:textSize="17dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp">


            <Button
                android:id="@+id/btnDeletarProfilePrestador"
                android:layout_width="390dp"
                android:layout_height="65dp"
                android:layout_marginLeft="11dp"
                android:textColor="#4A4A4A"
                android:background="@drawable/botao_meuperfil"
                android:drawableStart="@drawable/ic_delete"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:text="Deletar conta"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/btnSairProfile"
                android:layout_width="390dp"
                android:layout_height="65dp"
                android:layout_marginLeft="11dp"
                android:textColor="#4A4A4A"
                android:background="@drawable/botao_meuperfil"
                android:drawableLeft="@drawable/ic_exit"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:text="Sair"
                android:textAlignment="viewStart" />
        </LinearLayout>



</RelativeLayout>
