<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_marginTop="0dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEnderecoMenuCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    android:text="Rua Tal tal tal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/maozinha"/>


            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical" />

            <SearchView
                android:layout_width="360dp"
                android:layout_height="47dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/serchbar_decoracao"
                />

            <TextView
                android:id="@+id/txtlinha"
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="#E4E4E4"
                android:paddingLeft="30dp"
                android:textSize="20dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="#d8d8d8">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carouselView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="5dp"
                    app:slideInterval="3000"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingLeft="30dp"
                android:textStyle="bold"
                android:text="Destaques"
                android:textColor="@color/MenuBaixo"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtlinha7"
                android:layout_marginTop="15dp"
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"

                android:background="#E4E4E4"
                android:paddingLeft="30dp"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="30dp"
                android:background="#fff"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="#fff">

                    <Button
                        android:id="@+id/btnToListMassagem"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/massagem_sombra"
                        app:layout_constraintStart_toEndOf="@+id/btnToListEletricista"
                        app:layout_constraintTop_toBottomOf="@+id/btnToListJardinagem" />

                    <Button
                        android:id="@+id/btnToListEletricista"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/eletricista_sombra"
                        app:layout_constraintStart_toEndOf="@+id/btnToListLimpeza"
                        app:layout_constraintTop_toBottomOf="@+id/btnToListJardinagem" />

                    <Button
                        android:id="@+id/btnToListLimpeza"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/limpeza_sombra_teste"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnToListEncanador" />

                    <Button
                        android:id="@+id/btnToListEncanador"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/encanador_sombra"
                        android:paddingTop="60dp"
                        android:textColor="#00008B"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <Button
                        android:id="@+id/btnToListJardinagem"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/jardinagem_sombra"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.179"
                        app:layout_constraintStart_toEndOf="@+id/btnToListEncanador"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <Button
                        android:id="@+id/btnToListMecanico"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/mecanico_sombra"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.48"
                        app:layout_constraintStart_toEndOf="@+id/btnToListJardinagem"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/txtNomePrestProfile"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"

                        android:text="Mecânico"
                        android:textAlignment="center"
                        android:textColor="#6F777C"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.480"
                        app:layout_constraintStart_toEndOf="@+id/txtServicoPrestProfile"
                        app:layout_constraintTop_toBottomOf="@+id/btnToListMecanico" />

                    <TextView
                        android:id="@+id/txtServicoPrestProfile"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Jardinagem"
                        android:textAlignment="center"
                        android:textColor="#FF6F777C"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.485"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnToListEncanador" />

                    <TextView
                        android:id="@+id/txtEmailPrestProfile"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:text="Encanador"
                        android:textAlignment="center"
                        android:textColor="#FF6F777C"
                        app:layout_constraintEnd_toStartOf="@+id/txtServicoPrestProfile"
                        app:layout_constraintHorizontal_bias="0.044"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnToListEncanador" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"

                        android:textAlignment="center"
                        android:layout_marginStart="30dp"
                        android:text="Limpeza"
                        android:textColor="#FF6F777C"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnToListLimpeza" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Massagem"
                        android:textColor="#FF6F777C"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.485"
                        app:layout_constraintStart_toEndOf="@+id/textView15"
                        app:layout_constraintTop_toBottomOf="@+id/btnToListMassagem" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="90dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:text="Eletricista"
                        android:textColor="#FF6F777C"
                        app:layout_constraintStart_toEndOf="@+id/textView14"
                        app:layout_constraintTop_toBottomOf="@+id/btnToListEletricista" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtcuida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="30dp"
                    android:textStyle="bold"
                    android:text="Saúde e bem-estar"
                    android:textColor="@color/MenuBaixo"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtlinha3"
                    android:layout_marginTop="15dp"
                    android:layout_width="360dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="25dp"
                    android:background="#E4E4E4"
                    android:paddingLeft="30dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#61C0FF"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp">

                            <Button
                                android:id="@+id/btnToListEnfermagem"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/enfermagem" />

                            <Button
                                android:id="@+id/btnToListMassagem2"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="15dp"

                                android:background="@drawable/massagem" />

                            <Button
                                android:id="@+id/btnToListManicure"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/manicure" />

                            <TextView
                                android:id="@+id/txtvermais"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="20dp"
                                android:textColor="#B6B6B6"
                                android:clickable="true"
                                android:text="Ver mais >" />
                        </LinearLayout>
                    </HorizontalScrollView>


                </LinearLayout>

                <TextView
                    android:id="@+id/txtservi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="30dp"
                    android:textStyle="bold"
                    android:text="Serviços gerais"
                    android:textColor="@color/MenuBaixo"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtlinha4"
                    android:layout_marginTop="15dp"
                    android:layout_width="360dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="25dp"
                    android:background="#E4E4E4"
                    android:paddingLeft="30dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="#61C0FF"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#f5f6fa">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#fff"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnToListMecanico2"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/mecanico" />

                            <Button
                                android:id="@+id/btnToListEncanador2"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/encanador" />

                            <Button
                                android:id="@+id/btnToListEletricista2"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/eletricista" />

                            <TextView
                                android:id="@+id/txtvermais2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="20dp"
                                android:layout_weight="1"
                                android:textColor="#B6B6B6"
                                android:clickable="true"
                                android:text="Ver mais >" />

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtempre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="30dp"
                    android:textStyle="bold"
                    android:text="Serviços domésticos"
                    android:textColor="@color/MenuBaixo"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtlinha5"
                    android:layout_marginTop="15dp"
                    android:layout_width="360dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="25dp"
                    android:background="#E4E4E4"
                    android:paddingLeft="30dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="#61C0FF"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#fff"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnToListBaba"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"

                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/baba" />

                            <Button
                                android:id="@+id/btnToListLimpeza2"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/limpeza" />

                            <Button
                                android:id="@+id/btnToListCulinaria"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/cozinheiro" />

                            <TextView
                                android:id="@+id/txtvermais3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="20dp"
                                android:layout_weight="1"
                                android:textColor="#B6B6B6"
                                android:clickable="true"
                                android:text="Ver mais >" />

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtdeco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="30dp"
                    android:textStyle="bold"
                    android:text="Decoração"
                    android:textColor="@color/MenuBaixo"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtlinha6"
                    android:layout_marginTop="15dp"
                    android:layout_width="360dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="25dp"
                    android:background="#E4E4E4"
                    android:paddingLeft="30dp"
                    android:textSize="20dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="#61C0FF"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnToListJardinagem2"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/jardinagem" />

                            <Button
                                android:id="@+id/btnToListInformatica"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/designer" />

                            <Button
                                android:id="@+id/btnToListPintor"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/pintor" />

                            <TextView
                                android:id="@+id/txtvermais4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="20dp"
                                android:layout_weight="1"
                                android:textColor="#B6B6B6"
                                android:clickable="true"
                                android:text="Ver mais >" />

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtvermais5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:text="Ver Mais"
                    android:textColor="#183040"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>